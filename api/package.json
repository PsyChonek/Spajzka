{
  "name": "spajzka-api",
  "version": "1.0.0",
  "description": "Spajzka API with Express and Swagger",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "generate-spec": "node generate-spec.js",
    "generate-client": "npm run generate-spec && npx openapi-typescript-codegen --input ./openapi.json --output ../web/src/api-client --client axios"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "nodemon": "^3.1.9",
    "openapi-typescript-codegen": "^0.29.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
