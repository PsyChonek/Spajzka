{
  "compilerOptions": {
    "outDir": "../dist/Spajzka.API",
    "target": "ESNext",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "composite": true,
    "paths": {
      "@core/*": [
        "../Spajzka.CORE/src/*"
      ],
    }
  },
  "references": [
    {
      "path": "../Spajzka.CORE"
    }
  ]
}