{
  "extends": "tsconfig/base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*/src"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "paths": {
      "@psychonek/shared": ["node_modules/@psychonek/shared"]
    },
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "build",
    "next.config.js",
    "jest.config.js",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}