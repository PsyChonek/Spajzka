{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/index.js",
    "dev": "tsoa spec-and-routes && concurrently \"nodemon --config nodemon.json\" \"nodemon --config nodemon-tsoa.json\"",
    "swagger": "tsoa spec",
    "tsoa": "tsoa spec-and-routes",
    "debug": "tsoa spec-and-routes && concurrently \"nodemon --config nodemon.json --inspect\" \"nodemon --config nodemon-tsoa.json\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.8.2",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  }
}