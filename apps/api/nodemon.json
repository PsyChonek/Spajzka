{
    "watch": [
        "src"
    ],
    "ext": "ts",
    "ignore": [
        "src/routes/*",
        "*.spec.ts",
        "public/*"
    ],
    "exec": "ts-node src/index.ts",
    "events": {
        "restart": "npm run tsoa",
        "config:update": "npm run tsoa"
    },
    "env": {
        "NODE_ENV": "development"
    }
}