{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "env": ["NODE_ENV", "PUBLIC_URL", "CI=false"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "publishPackage":{
      "dependsOn": ["^publishPackage"],
      "outputs": ["build/**"]
    }
  }
}