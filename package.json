{
  "name": "spajzka",
  "version": "1.0.0",
  "description": "Full-stack pantry management application",
  "private": true,
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
    "generate-api-client": "cd api && npm run generate-client",
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd api && npm run build",
    "build:web": "cd web && npm run build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up",
    "docker:prod:build": "docker-compose up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:down:prod": "docker-compose down",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v",
    "db:install": "cd db && node install.js",
    "db:seed": "cd db && node seed.js",
    "db:migrate": "cd db && node migrate.js",
    "db:init": "npm run db:install && npm run db:seed && npm run db:migrate",
    "docker:db:init": "docker-compose -f docker-compose.dev.yml up mongodb-init",
    "docker:db:init:prod": "docker-compose up mongodb-init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psychonek/spajzka.git"
  },
  "keywords": [
    "pantry",
    "management",
    "express",
    "vue",
    "mongodb"
  ],
  "author": "Daniel Vazaƒç",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
